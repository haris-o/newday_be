{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"linebreak-style": "off",
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-undef": "warn",
		"no-unused-vars": "warn",
		"no-console": "off"
	}
}
